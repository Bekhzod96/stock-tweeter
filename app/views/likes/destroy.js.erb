if(document.querySelector('#tweet-<%= @tweet.id %> #unlike-options')){
  $('#tweet-<%= @tweet.id %> #unlike-options').tooltip('hide');
  document.querySelector('#tweet-<%= @tweet.id %> #unlike-options')
    .parentElement.removeChild(document.querySelector('#tweet-<%= @tweet.id %> #unlike-options'));
}

document.querySelector('#tweet-<%= @tweet.id %> .like-options')
  .insertAdjacentHTML('afterbegin',"<%= j render 'likes/like_button', tweet: @tweet %>");
$('#tweet-<%= @tweet.id %> #like-options').tooltip('show');

if(document.querySelector('#tweet-<%= @tweet.id %> #like-number')){
  document.querySelector('#tweet-<%= @tweet.id %> #like-number').innerText = parseInt(document.querySelector('#tweet-<%= @tweet.id %> #like-number').innerText) - 1
}