<div class="card m-4 ">
	<div class="card-body">
		<h5 class="card-title">Get Stock Price!</h5>
	 
			<%= form_tag search_stock_path, remote: true, method: :get do%>
			<div class="form-group row">
				<div class="col-sm-10 pr-0">
					<%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class:"form-control form-control-lg" %>
				</div>
				<div class="col-sm-2 input-group-append px-0">
					<%= button_tag type: :submit, class:'border-0 btn-outline-secondary ' do %>Get Price!<% end %>
				</div>
			</div>
			<% end %>

		<div id="result"></div>
		</div>
</div>