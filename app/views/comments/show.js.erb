$("#modal-window").find(".modal-content").html("<%= j (render 'comments/tweet_comments', tweet: @tweet) %>");
$("#modal-window").modal();

$("#tweet-<%= @tweet.id %> .comment-icon").tooltip('hide');
$("#comment_text").keyup(function(){
  $("#info-comment").text(`${(100 - $(this).val().length)}/100`);
});

$(function () {
    $('[data-toggle="tooltip"]').tooltip();
  });
